<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="content-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pastrymanagement.controller.OrderDetailsController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="page-title" text="Order Details" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Order ID:" />
                        <Label fx:id="orderIdLabel" GridPane.columnIndex="1" />
                        <Label text="Date:" GridPane.rowIndex="1" />
                        <Label fx:id="dateLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Client ID:" GridPane.rowIndex="2" />
                        <Label fx:id="clientIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Status:" GridPane.rowIndex="3" />
                        <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Total:" GridPane.rowIndex="4" />
                        <Label fx:id="totalLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
                <TableView fx:id="itemsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="productColumn" prefWidth="200.0" text="Product" />
                        <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                        <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane> 