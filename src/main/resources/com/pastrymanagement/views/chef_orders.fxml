<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="content-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pastrymanagement.controller.OrderController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="page-title" text="Pending Orders" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="searchOrderField" prefWidth="300.0" promptText="Search by order #..." />
                    <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" styleClass="action-button" text="Search" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" styleClass="action-button" text="Refresh" />
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label styleClass="section-header" text="Orders Assigned to You" />
                <TableView fx:id="pendingOrdersTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="100.0" text="Order #" />
                        <TableColumn fx:id="dateOrderedColumn" prefWidth="150.0" text="Date Ordered" />
                        <TableColumn fx:id="dueDateColumn" prefWidth="150.0" text="Due Date" />
                        <TableColumn fx:id="clientNameColumn" prefWidth="180.0" text="Client" />
                        <TableColumn fx:id="itemsColumn" prefWidth="80.0" text="Items" />
                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="priorityColumn" prefWidth="100.0" text="Priority" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </padding>
            <children>
                <FlowPane hgap="20.0">
                    <children>
                        <Label styleClass="stats-label" text="Total Pending:" />
                        <Label fx:id="totalPendingLabel" styleClass="stats-value" text="0" />
                        <Label styleClass="stats-label" text="Due Today:" />
                        <Label fx:id="dueTodayLabel" styleClass="stats-value" text="0" />
                        <Label styleClass="stats-label" text="Overdue:" />
                        <Label fx:id="overdueLabel" styleClass="stats-value" text="0" />
                    </children>
                </FlowPane>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button fx:id="viewDetailsButton" mnemonicParsing="false" onAction="#handleViewDetails" styleClass="action-button" text="View Details" />
                    <Button fx:id="startProductionButton" mnemonicParsing="false" onAction="#handleStartProduction" styleClass="action-button" text="Start Production" />
                    <Button fx:id="completeOrderButton" mnemonicParsing="false" onAction="#handleCompleteOrder" styleClass="action-button" text="Mark as Complete" />
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>