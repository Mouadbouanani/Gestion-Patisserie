<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ordersystem.controller.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="top-bar">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <TextField fx:id="searchField" prefWidth="300.0" promptText="Hinted search text" styleClass="search-field" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="usernameLabel" styleClass="username-label" text="soufyangoat" />
                <Button fx:id="labelButton" mnemonicParsing="false" styleClass="label-button" text="Label" />
            </children>
        </HBox>
    </top>
    <left>
        <VBox prefWidth="150.0" spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ImageView fx:id="sidebarLogo" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
                <Button fx:id="orderButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showOrderView" styleClass="menu-button-active" text="Order" />
                <Button fx:id="clientButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showClientView" styleClass="menu-button" text="Client" />
                <Button fx:id="productButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showProductView" styleClass="menu-button" text="Prouct" />
                <Button fx:id="employeeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showEmployeeView" styleClass="menu-button" text="Employee" />
                <Button fx:id="settingButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showSettingView" styleClass="menu-button" text="Setting" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" styleClass="content-area">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <TableView fx:id="orderTable" styleClass="order-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="150.0" text="Order_Id" />
                        <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Order_date" />
                        <TableColumn fx:id="amountColumn" prefWidth="150.0" text="Amount" />
                        <TableColumn fx:id="clientIdColumn" prefWidth="150.0" text="Id_client" />
                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddOrder" prefWidth="120.0" styleClass="action-button" text="Add" />
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateOrder" prefWidth="120.0" styleClass="action-button" text="Update" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteOrder" prefWidth="120.0" styleClass="action-button" text="Delete" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>